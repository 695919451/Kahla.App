{
  "name": "kahla",
  "version": "2.5.1",
  "description": "Kahla is a cross-platform business messaging app.",
  "author": "Aiursoft <postmaster@aiursoft.com> (https://www.aiursoft.com/)",
  "build": {
    "appId": "com.example.kahla",
    "productName": "Kahla",
    "copyright": "Copyright Â© 2018 Aiursoft",
    "directories": {
      "app": "www"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "zip"
        }
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        },
        {
          "target": "tar.gz"
        }
      ]
    }
  },
  "contributors": [
    "Anduin@aiursoft.com",
    "xxyzz@aiursoft.com",
    "2539820590@qq.com",
    "l2dy@macports.org"
  ],
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run prebuild",
    "electron": "ng build --base-href ./ && electron ./www/index.js",
    "start": "npm run prebuild && ng serve --open",
    "prebuild": "ts-node version.ts",
    "build": "ng build --base-href /",
    "lint": "ng lint --type-check && tsc",
    "pack": "asar pack ./www ./www/app.asar",
    "prod": "npm run prebuild && ng build --base-href / --prod",
    "prod-electron": "npm run prebuild && ng build --base-href ./ --prod",
    "prod-zh": "npm run prebuild && ng build --base-href / --prod --i18n-locale zh --i18n-file ./src/messages.zh.xlf"
  },
  "dependencies": {
    "@angular/animations": "6.1.7",
    "@angular/common": "6.1.7",
    "@angular/compiler": "6.1.7",
    "@angular/core": "6.1.7",
    "@angular/fire": "^5.1.1",
    "@angular/forms": "6.1.7",
    "@angular/http": "6.1.7",
    "@angular/platform-browser": "6.1.7",
    "@angular/platform-browser-dynamic": "6.1.7",
    "@angular/pwa": "^0.8.3",
    "@angular/router": "6.1.7",
    "@angular/service-worker": "6.1.7",
    "autolinker": "^1.7.1",
    "cordova-android": "^7.1.1",
    "cordova-browser": "^5.0.0",
    "cordova-ios": "^4.5.1",
    "cordova-plugin-whitelist": "^1.3.3",
    "cordova-windows": "4.4.2",
    "core-js": "^2.5.7",
    "crypto-js": "^3.1.9-1",
    "firebase": "^5.7.2",
    "font-awesome": "^4.7.0",
    "he": "^1.2.0",
    "rxjs": "^6.3.3",
    "sweetalert2": "^7.28.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.8.3",
    "@angular-devkit/build-optimizer": "^0.8.3",
    "@angular-devkit/core": "^0.8.3",
    "@angular/cli": "6.2.1",
    "@angular/compiler-cli": "6.1.7",
    "@angular/language-service": "6.1.7",
    "@types/jasmine": "^2.8.8",
    "@types/jasminewd2": "^2.0.4",
    "@types/node": "^10.11.2",
    "asar": "^0.14.0",
    "codelyzer": "^4.4.4",
    "electron": "^2.0.10",
    "electron-builder": "^20.28.4",
    "jasmine-core": "^3.2.1",
    "jasmine-spec-reporter": "~4.2.1",
    "ts-node": "^7.0.1",
    "tslint": "~5.11.0",
    "typescript": "^2.9.2",
    "webpack": "^4.20.2"
  },
  "cordova": {
    "platforms": [
      "android",
      "browser",
      "ios",
      "windows"
    ],
    "plugins": {
      "cordova-plugin-whitelist": {}
    }
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/AiursoftWeb/Kahla.App.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/AiursoftWeb/Kahla.App/issues"
  },
  "homepage": "https://kahla.aiursoft.com",
  "release": "build"
}
